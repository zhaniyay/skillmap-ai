# Frontend Environment Configuration Example
# Copy this file to .env and fill in your actual values
# Note: All variables must be prefixed with VITE_ to be accessible in the browser

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend server URL
# Development: http://localhost:8000
# Production: https://your-backend-domain.com
VITE_API_BASE_URL=http://localhost:8000

# API request timeout in milliseconds (default: 30000 = 30 seconds)
VITE_API_TIMEOUT=30000

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name displayed in the UI
VITE_APP_NAME=SkillMap AI

# Application version
VITE_APP_VERSION=1.0.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable debug mode (shows additional logging in development)
# Values: true, false
VITE_ENABLE_DEBUG=true

# Enable analytics tracking (for production)
# Values: true, false
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size for uploads in bytes (default: 10485760 = 10MB)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types for upload (comma-separated)
VITE_ALLOWED_FILE_TYPES=.pdf

# =============================================================================
# UI/UX SETTINGS
# =============================================================================

# Toast notification duration in milliseconds (default: 3000 = 3 seconds)
VITE_TOAST_DURATION=3000

# Animation duration in milliseconds (default: 200)
VITE_ANIMATION_DURATION=200
